@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}

<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Admin Details</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container col-md-12">
    <h4>List of users in this role:</h4>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>


    @if (ViewBag.UserCount == 0)
    {
        <hr />
        <p>No users found in this role.</p>
    }

    <table class="table">

        @foreach (var item in ViewBag.Users)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
            </tr>
        }
    </table>
    <p>
        <a href="@Url.Action("Edit", "RolesAdmin", new { id = Model.Id, @class = "btn btn-primary"})">Edit</a>
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id, @class = "btn btn-primary" })*@
    </p>
    <p class="text-center">
        @*@Html.ActionLink("Back to List", "Index")*@
        <a href="@Url.Action("Index", "RolesAdmin")" class="btn btn-dark p-3">Back to Admin List</a>
    </p>
</div>



