@model IEnumerable<MVCStoreFront.DATA.EF.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Employee Departments</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<br/>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeptName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeptName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.DeptID })
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                @:|
                @Html.ActionLink("Edit", "Edit", new { id = item.DeptID }) @:|
                @Html.ActionLink("Delete", "Delete", new { id = item.DeptID })
            }


        </td>
    </tr>
}

</table>
