@model IEnumerable<MVCStoreFront.DATA.EF.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Employee Departments</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<br />

<div class="container col-md-12">
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        <p class="text-center p-5">
            @*@Html.ActionLink("Create New", "Create")
                @Url.Action("Create New", "Create")*@
            <a href="@Url.Action("Create", "Departments")" class="btn_3 pull-right">Add New Department</a>
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>
                    @*@Html.ActionLink("Details", "Details", new { id = item.DeptID })*@
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                      

                        @Html.ActionLink("Delete", "Delete", new { id = item.DeptID })
                    }


                </td>
            </tr>
        }

    </table>
</div>