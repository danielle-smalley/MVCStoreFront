
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- breadcrumb part start-->
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>About Us</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->
<!-- product list part start-->
<section class="about_us padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="about_us_content">
                    <h5>Our Mission</h5>
                    <h3>At MeowMart, we strive to be your go-to resource for all things cat-related. We aim to offer the best products, best service, and best experience for our two legged to four legged friends.</h3>
                    <div class="about_us_video">
                        <img src="~/Content/img/Capture.JPG"  alt="#" class="img-fluid">
                        <a class="about_video_icon popup-youtube" href="https://www.youtube.com/watch?v=xSE9Qk9wkig" target="_blank"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product list part end-->
<!-- feature part here -->
<!-- feature part here -->
<section class="feature_part section_padding">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-6">
                <div class="feature_part_tittle">
                    <h3>
                        We have the best team to support the best customers!
                    </h3>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="feature_part_content">
                    <p>Our stellar MeowMart team offers 24/7 support for any questions or concerns you may have while shopping our site or using our products. Rest assured, we will always be here for you. Fur real!</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-3 col-sm-6">
                <div class="single_feature_part">
                    <img src="~/Content/img/icon/feature_icon_1.svg" alt="#">
                    <h4>Secure site for payment with multiple payment options</h4>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="single_feature_part">
                    <img src="~/Content/img/icon/feature_icon_2.svg" alt="#">
                    <h4>Autoship options for convenience</h4>
                    <br/>
                    <br/>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="single_feature_part">
                    <img src="~/Content/img/icon/feature_icon_3.svg" alt="#">
                    <h4>Free Delivery for orders $40+</h4>
                    <br/>
                    <br/>

                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="single_feature_part">
                    <img src="~/Content/img/icon/feature_icon_4.svg" alt="#">
                    <h4>Rewards Purr-rogram that offers deals and free gifts</h4>
                    <br />
                </div>
            </div>
        </div>
    </div>
</section>
<!-- feature part end -->
<!-- feature part end -->
<!-- subscribe part here -->
<section class="subscribe_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="subscribe_part_content">
                    <h2>Get promotions & updates!</h2>
                    <p>Make sure to subscribe to our emails and sign up for a Rewards Purr-rogram account. Receive the latest MeowMart news, coupons, and sales straight to your inbox!</p>
                    <div class="subscribe_form">
                        <input type="email" placeholder="Enter your email">
                        <a href="#" class="btn_1">Subscribe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- subscribe part end -->
